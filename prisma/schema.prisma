generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)  // PRINCIPAL, SELLER ou USER
  createdAt DateTime @default(now())

  // Principal User to their Sellers and Clients
  createdSellers User[]   @relation("PrincipalToSellers", fields: [id], references: [createdBy])
  createdClients Client[] @relation("PrincipalToClients", fields: [id], references: [createdBy])

  // Sellers to their Clients (only)
  managedClients Client[] @relation("SellerToClients", fields: [id], references: [sellerId])
  
  createdBy Int? // Reference to the Principal User who created the seller

  // Link to Principal User
  principal User? @relation("PrincipalToSellers", fields: [createdBy], references: [id])
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
  createdAt DateTime @default(now())

  // Seller responsible for the client
  sellerId  Int?
  seller    User? @relation("SellerToClients", fields: [sellerId], references: [id])

  // Principal User who initially created this client
  createdBy Int?
  principal User? @relation("PrincipalToClients", fields: [createdBy], references: [id])
}

enum Role {
  PRINCIPAL
  SELLER
  USER
}

