// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)  // ADMIN, SELLER ou USER
  createdAt DateTime @default(now())

  // Relacionamento com clientes e vendedores
  clients   Client[] @relation("UserClients")
  sellers   User[]   @relation("OwnerToSellers", fields: [createdBy], references: [id])
  createdBy Int?

  // Vendedor vinculado ao usuário principal
  owner     User?    @relation("OwnerToSellers", references: [id])
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
  createdAt DateTime @default(now())

  // Vendedor do cliente
  sellerId  Int?
  seller    User? @relation("ClientSeller", fields: [sellerId], references: [id])

  // Criador do cliente (usuário principal)
  createdBy Int?
  owner     User? @relation("UserClients", fields: [createdBy], references: [id])
}

enum Role {
  ADMIN
  SELLER
  USER
}
